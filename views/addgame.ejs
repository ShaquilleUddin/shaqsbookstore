<!doctype html>
<html>
  <head>
    <title>Add game to <%=shopData.shopName%></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <!-- Taskbar Header -->
    <div class="taskbar"> 
      <a href="/">Home</a>
      <a href="users/login">Login</a>
      <a href="users/logout">Logout</a>
      <a href="/about">About Us</a>
      <a href="games/list">Games List</a>
    </div>

    <!-- Main Content -->
    <h1><%=shopData.shopName%>: Add game</h1>
    <form method="POST" action="/gameadded">
        <p>Game name: <input id="name" type="text" name="name" value="" /></p>
        <p>Price: <input id="price" type="number" name="price" value="" /></p>
        <input type="submit" value="Add Game" />
    </form>
  </body>
</html>
